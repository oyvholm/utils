BOOKFILES = file.xml
HTMLFILE = file.html

$(HTMLFILE): $(BOOKFILES)
	xsltproc --output $(HTMLFILE) ~/xsl/xhtml/docbook.xsl $(BOOKFILES)

.PHONY: valid
valid:
	xmllint --valid --noout $(BOOKFILES)
