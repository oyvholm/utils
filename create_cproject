#!/usr/bin/env bash

#=======================================================================
# create_cproject
# File ID: 0aa2560c-8683-11e0-bc0d-00023faf1383
#
# Create skeleton for new C project
#
# Author: Ã˜yvind A. Holm <sunny@sunbase.org>
# License: GNU General Public License version 2 or later.
#=======================================================================

progname=create_cproject
VERSION=0.5.1

ARGS="$(getopt -o "\
c\
h\
q\
v\
" -l "\
help,\
quiet,\
verbose,\
version,\
" -n "$progname" -- "$@")"
test "$?" = "0" || exit 1
eval set -- "$ARGS"

opt_help=0
opt_quiet=0
opt_verbose=0
while :; do
    case "$1" in
        -h|--help) opt_help=1; shift ;;
        -q|--quiet) opt_quiet=$(($opt_quiet + 1)); shift ;;
        -v|--verbose) opt_verbose=$(($opt_verbose + 1)); shift ;;
        --version) echo $progname $VERSION; exit 0 ;;
        --) shift; break ;;
        *) echo $progname: Internal error >&2; exit 1 ;;
    esac
done
opt_verbose=$(($opt_verbose - $opt_quiet))

if test "$opt_help" = "1"; then
    test $opt_verbose -gt 0 && { echo; echo $progname $VERSION; }
    cat <<END

Create skeleton for a new C project in the current directory where the 
main .c file is called PROJECT_NAME.c.

Usage: $progname [options] PROJECT_NAME

Options:

  -h, --help
    Show this help.
  -q, --quiet
    Be more quiet. Can be repeated to increase silence.
  -v, --verbose
    Increase level of verbosity. Can be repeated.
  --version
    Print version information.

END
    exit 0
fi

name=$1
test -z "$name" && { echo $progname: Name not specified as arg 1 >&2; exit 1; }

echo -n "COPYING: " && std COPYING COPYING && echo OK || exit 1
for f in .gitignore README.md Makefile; do
    echo -n "$f: " && std -t exec=$name c/$f $f || exit 1
done

mkdir src && cd src || exit 1
for f in .gitignore Gen-version Makefile gdbrc binbuf.c binbuf.h io.c \
         selftest.c strings.c; do
    echo -n "src/$f: " && std -t exec=$name c/src/$f $f || exit 1
done
sort -u .gitignore >.gitignore.tmp && mv .gitignore.tmp .gitignore || exit 1
echo -n "src/$name.c: " && std -t exec=$name c/src/std.c $name.c \
&& echo -n "src/$name.h: " && std -t exec=$name c/src/std.h $name.h \
&& echo -n "src/$name.1.man: " \
&& std -t exec=$name c/src/std.1.man $name.1.man \
|| exit 1

mkdir t && cd t || exit 1
echo -n "src/t/.gitignore: " \
&& std -t exec=$name c/src/t/.gitignore .gitignore \
&& sort -u .gitignore >.gitignore.tmp && mv .gitignore.tmp .gitignore || exit 1
echo -n "src/t/Makefile: " && std -t exec=$name c/src/t/Makefile Makefile \
&& echo -n "src/t/$name.t: " \
&& std c/src/t/std.t $name.t -t progname=$name || exit 1
