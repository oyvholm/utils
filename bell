#=======================================================================

progname=bell

test -z "$1" && { echo $progname: Repo not specified >&2; exit 1; }

test -d "/bellmann/home/sunny/repos/Git/$1.git" || {
    echo $progname: $1: Repo doesn\'t exist >&2
    exit 1
}
git remote add bellmann "/bellmann/home/sunny/repos/Git/$1.git"
