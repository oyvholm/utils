#!/usr/bin/env bash

#=======================================================================
# filenamelower
# File ID: eb295092-badb-11de-a441-00248cd5cf1e
# Renames files to lower case
#=======================================================================

# FIXME: Take care of those damn spaces, semicolons, etc in file names.

for f in "$@"; do
    mv -vi "$f" "`echo $f | tolower`";
done
