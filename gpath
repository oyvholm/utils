#!/usr/bin/perl

#=======================================================================
# gpath
# File ID: acd2d3a2-4610-11e4-9bb4-c80aa9e67bbd
#
# Create a directed graph for Graphviz by reading plain text lines from 
# files or stdin, each line is a node label. Adjacent lines are 
# connected in the graph, an empty line splits the graph.
#
# Character set: UTF-8
# ©opyleft 2014– Øyvind A. Holm <sunny@sunbase.org>
# License: GNU General Public License version 2 or later, see end of 
# file for legal stuff.
#=======================================================================

use strict;
use warnings;
use Getopt::Long;

local $| = 1;

our $Debug = 0;

our %Opt = (

    'count' => 1,
    'debug' => 0,
    'help' => 0,
    'verbose' => 0,
    'version' => 0,

);

our $progname = $0;
$progname =~ s/^.*\/(.*?)$/$1/;
our $VERSION = '0.00';

Getopt::Long::Configure('bundling');
GetOptions(

    'count|c=i' => \$Opt{'count'},
    'debug' => \$Opt{'debug'},
    'help|h' => \$Opt{'help'},
    'verbose|v+' => \$Opt{'verbose'},
    'version' => \$Opt{'version'},

) || die("$progname: Option error. Use -h for help.\n");

$Opt{'debug'} && ($Debug = 1);
$Opt{'help'} && usage(0);
if ($Opt{'version'}) {
    print_version();
    exit(0);
}
$Opt{'count'} < 1 && die("$progname: -c/--count argument must be higher than zero\n");

exit(main(%Opt));

sub main {
    # {{{
    my %Opt = @_;
    my $Retval = 0;
    my ($curr, $prev) = ('', '');
    my %used = ();

    print("digraph g {\n");
    while (my $line = <>) {
        $line =~ s/"/\\"/g;
        $line =~ s/^\s+//;
        $line =~ s/\s+$//;
        if ($line =~ /^(.+)$/) {
            $curr = $1;
            if (length($prev) && $prev ne $curr) {
                $used{"$prev $curr"}++;
                ($used{"$prev $curr"} == $Opt{'count'}) && (
                    print("\"$prev\" -> \"$curr\";\n")
                );
            }
            $prev = $curr;
        } else {
            $prev = '';
        }
    }
    print("}\n");
    return($Retval);
    # }}}
} # main()

sub print_version {
    # Print program version {{{
    print("$progname v$VERSION\n");
    return;
    # }}}
} # print_version()

sub usage {
    # Send the help message to stdout {{{
    my $Retval = shift;

    if ($Opt{'verbose'}) {
        print("\n");
        print_version();
    }
    print(<<"END");

Usage: $progname [options] [file [files [...]]]

Create a directed graph for Graphviz by reading plain text lines from 
files or stdin, each line is a node label. Adjacent lines are connected 
in the graph, an empty line splits the graph.

Options:

  -c X, --count X
    Only display connections that have been repeated at least X times.
  -h, --help
    Show this help.
  -v, --verbose
    Increase level of verbosity. Can be repeated.
  --version
    Print version information.
  --debug
    Print debugging messages.

END
    exit($Retval);
    # }}}
} # usage()

sub msg {
    # Print a status message to stderr based on verbosity level {{{
    my ($verbose_level, $Txt) = @_;

    if ($Opt{'verbose'} >= $verbose_level) {
        print(STDERR "$progname: $Txt\n");
    }
    return;
    # }}}
} # msg()

sub D {
    # Print a debugging message {{{
    $Debug || return;
    my @call_info = caller;
    chomp(my $Txt = shift);
    my $File = $call_info[1];
    $File =~ s#\\#/#g;
    $File =~ s#^.*/(.*?)$#$1#;
    print(STDERR "$File:$call_info[2] $$ $Txt\n");
    return('');
    # }}}
} # D()

__END__

